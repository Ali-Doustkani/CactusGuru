<Grid x:Class="CactusGuru.Presentation.View.Views.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:lc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      xmlns:intr="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      FlowDirection="RightToLeft">
    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type lc:Tile}">
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Background" Value="#1a1f33" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </Grid.Resources>
    <Grid.DataContext>
        <Binding Source="{StaticResource vmLocator}" Path="FirstPageViewModel" />
    </Grid.DataContext>
    <intr:Interaction.Triggers>
        <intr:EventTrigger EventName="Loaded">
            <intr:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </intr:EventTrigger>
        <intr:EventTrigger EventName="Unloaded">
            <intr:InvokeCommandAction Command="{Binding UnloadCommand}"/>
        </intr:EventTrigger>
    </intr:Interaction.Triggers>
    <lc:TileLayoutControl>
        <lc:Tile Size="Small" Command="{Binding CollectionListCommand}">
            <StackPanel>
                <TextBlock Style="{StaticResource LabelFontStyle}"
                           Width="{Binding ElementName=lblItemsCount, Path=Width}">تعداد اقلام:</TextBlock>
                <TextBlock Name="lblItemsCount"
                           FontSize="55"
                           VerticalAlignment="Top"
                           Text="{Binding ItemsCount, StringFormat='{}D4'}"
                           FontWeight="Bold"
                           Foreground="#d0ba3a"
                           LineStackingStrategy="BlockLineHeight"
                           LineHeight="52" />
            </StackPanel>
        </lc:Tile>
        <lc:Tile Size="Small" Command="{Binding ImageListCommand}">
            <TextBlock FontFamily="B Titr"
                       FontSize="50"
                       Foreground="#fff8e7">گالری</TextBlock>
        </lc:Tile>
    </lc:TileLayoutControl>
</Grid>