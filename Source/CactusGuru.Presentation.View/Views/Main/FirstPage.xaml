<Grid x:Class="CactusGuru.Presentation.View.Views.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:lc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
      xmlns:intr="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:loaders="clr-namespace:Loaders;assembly=MrMitch.Loaders"
      FlowDirection="RightToLeft">
    <Grid.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type lc:Tile}">
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Background" Value="#1a1f33" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Size" Value="Small" />
            </Style>
            <BooleanToVisibilityConverter x:Key="visConverter"/>
        </ResourceDictionary>
    </Grid.Resources>
    <Grid.DataContext>
        <Binding Source="{StaticResource vmLocator}" Path="FirstPageViewModel" />
    </Grid.DataContext>
    <intr:Interaction.Triggers>
        <intr:EventTrigger EventName="Loaded">
            <intr:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </intr:EventTrigger>
        <intr:EventTrigger EventName="Unloaded">
            <intr:InvokeCommandAction Command="{Binding UnloadCommand}"/>
        </intr:EventTrigger>
    </intr:Interaction.Triggers>
    <Grid Visibility="{Binding LoaderState.IsBusy, Converter={StaticResource visConverter}}">
        <loaders:ChromeLoader Thickness="6" Width="80" Height="80" Foreground="#374c61"/>
        <TextBlock Margin="0 140 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.8">در حال بارگزاری</TextBlock>
    </Grid>
    <lc:TileLayoutControl Visibility="{Binding LoaderState.IsIdle, Converter={StaticResource visConverter}}">
        <lc:Tile Command="{Binding CollectionListCommand}">
            <StackPanel>
                <TextBlock Style="{StaticResource LabelFontStyle}"
                           Width="{Binding ElementName=lblItemsCount, Path=Width}">تعداد اقلام:</TextBlock>
                <TextBlock Name="lblItemsCount"
                           FontSize="55"
                           VerticalAlignment="Top"
                           Text="{Binding ItemsCount, StringFormat='{}D4'}"
                           FontWeight="Bold"
                           Foreground="#d0ba3a"
                           LineStackingStrategy="BlockLineHeight"
                           LineHeight="52" />
            </StackPanel>
        </lc:Tile>
        <lc:Tile Command="{Binding ImageListCommand}">
            <TextBlock FontFamily="B Titr"
                       FontSize="50"
                       Foreground="#fff8e7">گالری</TextBlock>
        </lc:Tile>
        <lc:TileLayoutControl.Style>
            <Style TargetType="lc:TileLayoutControl">
                <Style.Triggers>
                    <Trigger Property="Visibility" Value="Visible">
                        <Trigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Duration="0:0:0.5" From="0" To="1" Storyboard.TargetProperty="Opacity" />
                                </Storyboard>
                            </BeginStoryboard>
                        </Trigger.EnterActions>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </lc:TileLayoutControl.Style>
    </lc:TileLayoutControl>
</Grid>