<UserControl x:Class="CactusGuru.Presentation.View.Views.GenusEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:CactusGuru.Presentation.View.Utils"
             xmlns:dxe="clr-namespace:DevExpress.Xpf.Editors;assembly=DevExpress.Xpf.Core.v15.1"
             xmlns:local="clr-namespace:CactusGuru.Presentation.View.Views"
             FlowDirection="RightToLeft">
    <UserControl.Resources>
        <utils:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:ViewModelLocator x:Key="vmLocator"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Path="GenusEditorViewModel" Source="{StaticResource vmLocator}"/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="26"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Title -->
            <TextBlock 
                Grid.Row="0" 
                Grid.Column="0" 
                Margin="10 2" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Text="عنوان" 
                IsEnabled="{Binding State.IsNotView}"/>
            <TextBox
                Name="txtTitle"
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="0 2" 
                Text="{Binding SelectedGenusName, UpdateSourceTrigger=PropertyChanged}" 
                FlowDirection="LeftToRight"
                utils:FocusManager.HasFocus="{Binding State.FirstControlFocused}"
                IsEnabled="{Binding State.IsNotView}"/>
        </Grid>

        <!-- Filter -->
        <dxe:ButtonEdit
            Name="txtSearch" 
            Grid.Row="1"
            AllowDefaultButton="False" 
            NullText="برای جست و جو متن خود را در این قسمت وارد کنید" 
            Margin="0 0 0 5" 
            FlowDirection="LeftToRight" 
            Text="{Binding ItemSource.FilterText, UpdateSourceTrigger=PropertyChanged}" 
            utils:FocusManager.HasFocus="{Binding State.DefaultControlFocused}"
            KeyUp="UIElement_OnKeyUp">
            <dxe:ButtonEdit.Buttons>
                <dxe:ButtonInfo GlyphKind="Cancel" Command="{Binding ClearFilterTextCommand}"/>
            </dxe:ButtonEdit.Buttons>
        </dxe:ButtonEdit>

        <ListBox  
            Name="listBox" 
            Grid.Row="2"
            FlowDirection="LeftToRight" 
            ItemsSource="{Binding ItemSource.Source}" SelectedItem="{Binding WorkingItem, Mode=TwoWay}" 
            IsEnabled="{Binding Path=State.IsNotView, Converter={StaticResource InverseBooleanConverter}}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name, UpdateSourceTrigger=PropertyChanged}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
