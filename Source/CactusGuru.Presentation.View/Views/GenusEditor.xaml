<UserControl x:Class="CactusGuru.Presentation.View.Views.GenusEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:CactusGuru.Presentation.View.Utils"
             xmlns:local="clr-namespace:CactusGuru.Presentation.View.UserControls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Path="GenusEditorViewModel" Source="{StaticResource vmLocator}" />
    </UserControl.DataContext>
    <Grid Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="26" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <!-- Title -->
        <TextBlock Style="{StaticResource LabelStyle}" Text="عنوان" />
        <TextBox Style="{StaticResource LastEntryStyle}"
                 Text="{Binding SelectedGenusName, UpdateSourceTrigger=PropertyChanged}"
                 utils:FocusHandler.HasFocus="{Binding State.FirstControlFocused}" />
        <!-- Filter -->
        <local:SourceBox Grid.Row="1" Grid.ColumnSpan="2" />
    </Grid>
</UserControl>
